<%= form_for @item do |f| %>
	<%= f.label 'Name' %>
	<%= f.text_field :name %>
	<br/>

	<%= f.label 'Descrition' %>
	<%= f.text_area :description %>
	<br/>

	<%= f.label 'Quantity' %>
	<%= f.text_field :quantity %>
	<br/>

	<%= f.label 'Price' %>
	<%= f.text_field :price %>

	<br/>
	<%= f.submit 'Save' %>
<% end %>